# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/your_test_database_name

# Redis Configuration (Message Broker)
MESSAGE_BROKER=redis://localhost:6379/0

# Flower URL (Celery monitoring)
FLOWER_URL=http://localhost:5555
FLOWER_UNAUTHENTICATED_API=true

# JWT Configuration
JWT_SECRET_ACCESS_TOKEN=your_jwt_secret_key_here
JWT_SECRET_REFRESH_TOKEN=your_jwt_refresh_secret_key_here
ACCESS_TOKEN_EXPIRED_TIME=30d
REFRESH_TOKEN_EXPIRED_TIME=1h

# Application Configuration
FLASK_ENDPOINT_URL=https://your-domain.com/api/v2

# Invitation Token Configuration
INVITATION_ACCESS_TOKEN_EXPIRED_TIME=1h
CRYPTO_SECRET_KEY=your_crypto_secret_key_here

# Email Configuration (Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAILER_USER=your_email@example.com
MAILER_PASS=your_email_password_or_app_password
MAIL_DEFAULT_SENDER_NAME=Your App Name

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:8000", "http://localhost:5173", "https://your-domain.com"]

# Application Settings
PORT=3000

# Script Paths 
SCRIPT_PATH_01=/path/to/python/scripts
SCRIPT_PATH_02=/path/to/bash/scripts

# Firebase Configuration 
FIREBASE_PRIVATE_KEY_BASE64=your_firebase_private_key_base64_here

# Development Configuration
FLASK_ENV=development
FLASK_DEBUG=True